# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# line endings: lf (Unix), cr or crlf (DOS/Windows)
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8

# Remove whitespace characters preceding the end of a line
trim_trailing_whitespace = true

# Files have a blank line at the end
insert_final_newline = true

[{package.json,bower.json,.travis.yml}]
indent_size = 2

# salt state files
[*.sls]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Make,make,Makefile,makefile}]
indent_style = tab
indent_size = 4
